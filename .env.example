# Database
DB_URL=jdbc:postgresql://postgres:5432/authforge
DB_USERNAME=authforge
DB_PASSWORD=authforge

# JWT
JWT_SECRET=your-production-secret-key-at-least-256-bits

# OAuth2 (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Feature Flags (all true by default)
FEATURE_OAUTH2=true
FEATURE_2FA=true
FEATURE_RATE_LIMIT=true
FEATURE_EMAIL=true

# Rate Limiting
RATE_LIMIT_RPM=30

# Email
MAIL_HOST=mailhog
MAIL_PORT=1025
FROM_EMAIL=noreply@authforge.local

# App
APP_URL=http://localhost:4000
